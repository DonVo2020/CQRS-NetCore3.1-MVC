@model DonVo.CQRS.Standard21.Application.ViewModels.Employee.VacationViewModel

<fieldset class="form-group mb-5">
	<legend>Request a vacation</legend><hr />
	<div class="row">
		<form method="post" class="col-md-12">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="EmployeeId" />
			<div class="form-group">
				<label asp-for="VacationTypeId"></label>
				<select asp-for="VacationTypeId" asp-items="@(new SelectList(Model.VacationTypes, "Id", "Name"))" class="form-control"></select>
				<span asp-validation-for="VacationTypeId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="StartDate"></label>
				<input asp-for="StartDate" asp-format="{0:yyyy-MM-dd}" class="form-control">
				<span asp-validation-for="StartDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="EndDate"></label>
				<input asp-for="EndDate" asp-format="{0:yyyy-MM-dd}" class="form-control">
				<span asp-validation-for="EndDate" class="text-danger"></span>
			</div>
			<input type="hidden" asp-for="VacationStatus" />
			<input type="hidden" asp-for="RowVersion" />
			<button asp-action="RequestVacation" type="submit" class="btn btn-primary">Request</button>
		</form>
	</div>
</fieldset>