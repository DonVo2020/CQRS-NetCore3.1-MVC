@using Microsoft.AspNetCore.Identity
@model IEnumerable<DonVo.CQRS.Standard21.Application.ViewModels.Employee.EmployeeLiteViewModel>
@inject UserManager<DonVo.CQRS.Standard21.Domain.Model.Identity.ApplicationUser> UserManager

<fieldset class="form-group mb-5">
	<legend>Subordinates</legend><hr />
	<div class="row">
		<div class="col-12">
			<table class="table">
				<thead class="thead-light">
					<tr>
						<th scope="col" style="width: 90%">@Html.DisplayNameFor(model => model.FullName)</th>
						<th scope="col" style="width: 10%"></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@Html.DisplayFor(model => item.FullName)</td>
							<td>
								<a asp-action="Person" asp-route-id="@item.Id" role="button" class="btn btn-info btn-sm">Go</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</fieldset>

@section Scripts
{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}